{
  "name": "@haip/cli",
  "version": "1.0.1",
  "description": "Command-line interface for the Human-Agent Interaction Protocol (HAIP)",
  "main": "dist/index.js",
  "bin": {
    "haip": "dist/index.js"
  },
  "types": "@types/haip",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:llm": "ts-node src/index.ts chat --tool llm",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "link": "npm link"
  },
  "keywords": [
    "haip",
    "human-agent-interaction",
    "protocol",
    "cli",
    "command-line",
    "websocket",
    "sse",
    "streaming",
    "real-time",
    "typescript"
  ],
  "author": {
    "name": "San Digital",
    "url": "https://sandigital.uk",
    "email": "office@sandigital.uk"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/haiprotocol/haip.git"
  },
  "bugs": {
    "url": "https://github.com/haiprotocol/haip/issues"
  },
  "homepage": "https://haiprotocol.com",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "figlet": "^1.7.0",
    "@haip/sdk": "file:../haip-sdk",
    "inquirer": "^8.2.6",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "ora": "^5.4.1",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/haip": "file:../@types",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.10",
    "@types/node-fetch": "^2.6.12",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
